<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luminous.deceree.textstyler.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/mEtText"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/mCbBold"
        android:layout_alignStart="@+id/mCbBold" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="false"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/mCbBold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/mRbtnRed"
        android:checked="false"
        android:layout_below="@+id/mCbBold"

        android:contextClickable="false"
        android:enabled="true"
        android:clickable="true"
        android:focusableInTouchMode="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/mRbtnBlue"
        android:checked="false"
        android:contextClickable="false"
        android:enabled="true"
        android:clickable="false"
        android:layout_below="@+id/mRbtnGreen"
        android:layout_alignRight="@+id/mRbtnGreen"
        android:layout_alignEnd="@+id/mRbtnGreen" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:id="@+id/mRbtnGreen"
        android:checked="false"
        android:contextClickable="true"
        android:enabled="true"
        android:clickable="false"
        android:layout_below="@+id/mRbtnRed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RadioGroup>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bold"
        android:id="@+id/mCbBold"
        android:checked="false"
        android:layout_below="@+id/mEtText" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Italic"
        android:id="@+id/mCbItalic"
        android:checked="false"
        android:layout_below="@+id/mEtText"
        android:layout_toRightOf="@+id/mCbBold"
        android:layout_toEndOf="@+id/mCbBold" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="250dp"
        android:id="@+id/mTvTxt"
        android:textSize="90sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
